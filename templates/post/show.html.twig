{% extends 'base.html.twig' %}


{% block title %}Orchestra - Article{% endblock %}


    {% block header %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <a href="{{ path('post_edit', {id: post.id}) }}" class="btn btn-primary">Modifier</a>
                    {{ include('post/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    {% endblock %}

    {% block body %}
    {% if post.author == app.user %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ post.title }}</h1>
                <h2>Post√© le {{ post.createdAt|date('d/m/Y') }}</h2>
                <p>{{ post.content }}</p>
            </div>
        </div>
    </div>
    {% endif %}
    {% endblock %}

